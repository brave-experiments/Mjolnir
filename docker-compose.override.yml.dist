version: '3.6'

services:
  cli:
    build: .
    image: brave-experiments/apollo-go:latest
    volumes:
      - ./:/usr/local/go/src/github.com/brave-experiments/apollo-devops
    env_file:
      - .env
    command: >
      sh -c "CompileDaemon -log-prefix=false -build=\"echo acquired change\" "
    networks:
      apollo:
        aliases:
          - apollo.local

networks:
  apollo:
    driver: bridge